@model CarolineCottageService.CarouselDisplay
@using CarolineCottage.WebUI.Application
@{
    ViewBag.Title = "Caroline cottage home page";
}
<h4>
    Lovely seaside holiday home in Mousehole, near Penzance, Cornwall. Spacious and
    light, with balcony overlooking harbour and Mounts Bay. Sleeps up to 6, with annexe
    also available for extra accommodation sleeping 2
</h4>
<div class="row">
    <div class="col-md-5">
        <ul>
            <li><a href="@Url.Action("Cottage", "Home")">Our cottage - words and pictures</a></li>
            <li><a href="@Url.Action("Mousehole", "Home")">About Mousehole</a></li>
            <li><a href="@Url.Action("Visit", "Home")">Some place to visit</a></li>
            <li><a href="@Url.Action("Guest", "Home")">Guest comments</a></li>
            <li><a href="@Url.Action("Availability", "Home")">Availability and prices</a></li>
            <li><a href="@Url.Action("ContactCC", "Home")">Contact us</a></li>
            <li><a href="@Url.Action("Download", "Home")">Download our map, booking form and brochure</a></li>
            <li><a href="@Url.Action("Video", "Home")">Watch our ManOnABeach interview about Mousehole</a></li>
        </ul>
        <h4 class="text-center"><span class="label label-success">Now</span> with Wi-Fi</h4>
    </div>
    <div class="col-md-5 ">
        @{Html.RenderPartial("Carousel", Model);}
    </div>
</div>
@{
    var tempString = ViewData["Message"] ?? string.Empty;
    if (tempString.ToString() != string.Empty)
    {
        <p>
            Contact: @tempString.ToString()
        </p>
    }

}

